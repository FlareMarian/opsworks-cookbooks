check host node_gameserver with address 127.0.0.1
  start program = "/bin/bash -c 'cd <%= @deploy[:deploy_to] %>/current/src/nodejs/; /usr/bin/env NODE_PATH=<%= @deploy[:deploy_to] %>/current/src/nodejs/node_modules:<%= @deploy[:deploy_to] %>/current/src/nodejs /usr/local/bin/node --max-stack-size=65535 -- <%= @deploy[:deploy_to] %>/current/src/nodejs/main_gok.js --pidname node_server'"
  stop program  = "/bin/bash -c 'kill $(cat /var/run/node_server.pid)'"
  if failed port 80 protocol HTTP
    request /
    with timeout 10 seconds
    then restart

