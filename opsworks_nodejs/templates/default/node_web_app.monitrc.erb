check host node_web_app_<%= @application_name %> with address 127.0.0.1
  start program = "/bin/bash -c 'cd <%= @deploy[:deploy_to] %>/current/src/nodejs/; /usr/bin/env NODE_PATH=<%= @deploy[:deploy_to] %>/current/src/nodejs/node_modules:<%= @deploy[:deploy_to] %>/current/src/nodejs /usr/local/bin/node --max-stack-size=65535 -- <%= @deploy[:deploy_to] %>/current/src/nodejs/<%= @deploy[:main_script] %>'"
  stop program  = "/usr/bin/pkill -F '/var/run/current/node.pid'"
  if failed port 80 protocol HTTP
    request /
    with timeout 10 seconds
    then restart